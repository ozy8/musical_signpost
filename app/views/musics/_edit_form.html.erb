<%= form_for(@music) do |f| %>
  <% if @music.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>

      <ul>
      <% @music.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <%= f.label "Signpost (Only Choose One)" %><br>
  <%= f.collection_select(:signpost_ids, @signposts, :id, :label, {}, {multiple: true}) %>
  <br>
  <br>


  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :feeling %><br>
    <%= f.text_area :feeling, :size=>"50x10", :maxlength=>"300"  %>
  </div>
  <br>
  <div class="field">
    <%= f.label :youtube_url %><br>
    <%= f.text_field :youtube_url %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Update Music" %>
  </div>
<% end %>
